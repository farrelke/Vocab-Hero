{
  "manifest_version": 2,

  "name": "Chinese Vocab Learner!",
  "description": "Helps you learn chinese vocab",
  "version": "1.0.0",

  "background": {
    "scripts": ["js/eventPage.js"],
    "persistent": false
  },

  "icons": {
    "16": "vocabulary-small.png",
    "48": "vocabulary-medium.png",
    "128": "vocabulary-big.png"
  },

  "browser_action": {
    "default_icon": "vocabulary-small.png"
  },

  "permissions": [
    "storage"
  ],

  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
